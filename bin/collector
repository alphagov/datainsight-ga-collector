#!/usr/bin/env ruby

require 'bundler/setup'
Bundler.require

require_relative '../lib/visits_collector'
require_relative '../lib/visits_collector_config'

include GLI

program_desc 'Collect the weekly visits'

version 0.1

desc 'For the first request you need to pass in the authorisation token'
default_value nil
arg_name 'oauth token'
flag [:t,:token]

desc 'Print out the collected content'
command :print do |c|
  c.action do |global_options, options, args|
    visits_collector = Collectors::VisitsCollector.new(global_options[:token], VisitsCollectorConfig)
    puts visits_collector.collect_as_response
  end
end

exit GLI.run(ARGV)